@model List<ResultOfferDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">İndirim Teklif Başlığı</th>
                            <th scope="col">İndirim Teklif Alt başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OfferDiscountTitle</td>
                                <td>@item.OfferDiscountSubTitle</td>
                                <td><a href="/admin/OfferDiscount/deleteOfferDiscount/@item.OfferDiscountId" class="btn btn-danger"> Sil</a></td>
                                <td><a href="/admin/OfferDiscount/updateOfferDiscount/@item.OfferDiscountId" class="btn btn-success"> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <td><a href="/admin/offerDiscount/createOfferDiscount" class="btn btn-primary"> Yeni İndirim teklif girişi</a></td>

            </div>
        </div>
    </div>


</div>

