@model CreateOfferDiscountDto

@{
    ViewData["Title"] = "CreateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">İndirim Teklif Ekleme Sayfası</h6>
            <div class="table-responsive">

                <form method="post">
                    <label>
                        İndirim teklifi başlığı
                    </label>
                    <input type="text" class="form-control" asp-for="OfferDiscountTitle" />
                    <label>
                        İndirim Teklifi alt başlığı
                    </label>
                    <input type="text" class="form-control" asp-for="OfferDiscountSubTitle" />
                    <label>
                        İndirim Teklifi Görsel
                    </label>
                    <input type="text" class="form-control" asp-for="OfferDiscountImageUrl" />
                    <label>
                        İndirim Teklifi Buton Başlığı
                    </label>
                    <input type="text" class="form-control" asp-for="OfferDiscountButtonTitle" />
                    <div class=" pt-2">
                        <button class="btn btn-primary"> Ekle </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>