@model List<GetByIdProductImageDto>

@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 1;
}


<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Ürün Görsel Güncelle</h6>
            <div class="table-responsive">
                <form method="post">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <input type="hidden" asp-for="@Model[i].ProductImageId" />
                        <input type="hidden" asp-for="@Model[i].ProductId" />
                        <label> 
                            Görsel @count
                        </label>
                        count++;
                        <input type="text" class="form-control" asp-for="@Model[i].Image" />


                    }
                    <div class=" pt-2">
                        <button class="btn btn-primary" > Güncelle </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

