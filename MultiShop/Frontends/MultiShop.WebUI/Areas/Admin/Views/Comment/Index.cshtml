@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kullanıcı</th>
                            <th scope="col">Yorum</th>
                            <th scope="col">Tarih</th>
                            <th scope="col">Durum</th>   
                            <th scope="col">Sil</th>   
                            <th scope="col">Güncelle</th>   
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.NameSurname</td>
                                <td>@item.CommentDetail</td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>@item.Status</td>
                                <td><a href="/admin/Comment/deleteComment/@item.UserCommentId" class="btn btn-danger"> Sil</a></td>
                                <td><a href="/admin/Comment/UpdateComment/@item.UserCommentId" class="btn btn-success"> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

