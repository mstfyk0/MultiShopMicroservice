@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Adı</th>
                            <th scope="col">Fiyat </th>
                            <th scope="col">Resim</th>
                            @* <th scope="col">Kategoriye ait Ürünler</th> *@
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.ProductName</td>
                                <td>@item.ProductPrice</td>
                                <td>@item.ProductImageUrl</td>
                                @* <td><a href="#" class="btn btn-warning">Ürünleri </a></td> *@
                                <td><a href="/admin/Product/deleteProduct/@item.ProductId" class="btn btn-danger"> Sil</a></td>
                                <td><a href="/admin/Product/updateProduct/@item.ProductId" class="btn btn-success"> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <td><a href="/admin/Product/createProduct" class="btn btn-primary"> Yeni Ürün ekle </a></td>
            </div>
        </div>
    </div>


</div>

