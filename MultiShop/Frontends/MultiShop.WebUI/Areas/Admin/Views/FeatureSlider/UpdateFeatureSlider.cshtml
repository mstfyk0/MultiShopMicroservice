@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "CreateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Öne Çıkan GÖrsel Güncelleme Sayfası</h6>
            <div class="table-responsive">

                <form method="post">
                    <input type="hidden" asp-for="FeatureSliderId" /> 
                    <label>
                        Öne Çıkan GÖrsel Adı
                    </label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <label>
                        Açıklama
                    </label>
                    <input type="text" class="form-control" asp-for="Description" />
                    <label>
                        GÖrsel Linki
                    </label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <div class=" pt-2">
                        <button class="btn btn-primary"> Güncelle </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

