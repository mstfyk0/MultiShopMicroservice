@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Kategori Güncelle</h6>
            <div class="table-responsive">

                <form method="post">
                   @*  <label hidden>
                        Kategori ID
                    </label> *@
                    <input type="hidden" readonly class="form-control" asp-for="CategoryId" />
                    <label>
                        Kategori Adı
                    </label>
                    <input type="text" class="form-control" asp-for="CategoryName" />
                    <label>
                        Kategori Görsel
                    </label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <div class=" pt-2">
                        <button class="btn btn-primary"> Güncelle </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

