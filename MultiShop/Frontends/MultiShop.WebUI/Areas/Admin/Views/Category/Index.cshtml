@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Kategori Adı</th>
                            <th scope="col">Kategoriye ait Ürünler</th>
                            <th scope="col">Sil</th>    
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model )
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.CategoryName</td>
                                <td><a href="/admin/product/" class="btn btn-warning">Ürünleri </a></td>
                                <td><a href="/admin/category/deleteCategory/@item.CategoryId" class="btn btn-danger"> Sil</a></td>
                                <td><a href="/admin/category/updateCategory/@item.CategoryId" class="btn btn-success"> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <td><a href="/admin/category/createCategory" class="btn btn-primary"> Yeni Kategori girişi</a></td>

            </div>
        </div>
    </div>


</div>

