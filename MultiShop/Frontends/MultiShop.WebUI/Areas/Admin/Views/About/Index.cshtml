@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}



<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Açıklama</th>
                            <th scope="col">Adres </th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AboutDescription</td>
                                <td>@item.AboutAddress</td>
                                <td>@item.AboutEmail</td>
                                <td>@item.AboutPhone</td>
                                <td><a href="/admin/About/deleteAbout/@item.AboutId" class="btn btn-danger"> Sil</a></td>
                                <td><a href="/admin/About/updateAbout/@item.AboutId" class="btn btn-success"> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <td><a href="/admin/About/createAbout" class="btn btn-primary"> Yeni Hakkımda girişi</a></td>

            </div>
        </div>
    </div>


</div>



