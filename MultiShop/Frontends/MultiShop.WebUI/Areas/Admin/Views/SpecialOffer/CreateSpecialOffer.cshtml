@model CreateSpecialOfferDto

@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Özel Teklif Ekleme Sayfası</h6>
            <div class="table-responsive">

                <form method="post">
                    <label>
                        Teklif Başlığı Adı
                    </label>
                    <input type="text" class="form-control" asp-for="SpecialOfferTitle" />
                    <label>
                        Teklif Alt Başlığı Adı
                    </label>
                    <input type="text" class="form-control" asp-for="SpecialOfferSubTitle" />
                    <label>
                        Teklif Görsel
                    </label>
                    <input type="text" class="form-control" asp-for="SpecialOfferImageUrl" />
                    <div class=" pt-2">
                        <button class="btn btn-primary"> Ekle </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


