@model List<ResultSpecialOfferDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    // int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            @* <th scope="col">#</th> *@
                            <th scope="col">Teklif Başlığı</th>
                            <th scope="col">Teklif Alt Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @* count++; *@
                            <tr>
                                @* <th scope="row">@count</th> *@
                                <th scope="row">@item.SpecialOfferTitle</th>
                                <td>@item.SpecialOfferSubTitle</td>

                                <td><a href="/admin/SpecialOffer/deleteSpecialOffer/@item.SpecialOfferId" class="btn btn-danger"> Sil</a></td>
                                <td><a href="/admin/SpecialOffer/updateSpecialOffer/@item.SpecialOfferId" class="btn btn-success"> Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <td><a href="/admin/SpecialOffer/createSpecialOffer" class="btn btn-primary"> Yeni Teklif Girişi</a></td>

            </div>
        </div>
    </div>


</div>

